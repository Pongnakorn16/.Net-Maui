<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.Pages.FlexLayoutPage"
             Title="FlexLayoutPage">

    <FlexLayout Direction="Column"
        JustifyContent="Center"
        AlignItems="Center">

        <Border Stroke="Black"
            StrokeThickness="5">

            <Rectangle WidthRequest="100"
                   HeightRequest="100"
                   BackgroundColor="Red">
         </Rectangle>
        </Border>
            
         
            <Rectangle WidthRequest="100"
                   HeightRequest="100"
                   BackgroundColor="Green"
                   Stroke="Black"
                   StrokeThickness="5"
                   Margin="0,0,0,30">
                   
        </Rectangle>
        <Rectangle WidthRequest="100"
                   HeightRequest="100"
                   BackgroundColor="Blue">
        </Rectangle>
        
    </FlexLayout>
</ContentPage>