<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.Pages.ViewsPage"
             Title="ViewsPage">
    <VerticalStackLayout VerticalOptions="Center">
        <Label
            TextColor="Red"
            Text="Hello World!!!"
            FontAttributes="Bold"
            FontSize="Large"
            HorizontalTextAlignment="Center"></Label>
        <Border WidthRequest="300"
                Padding="50"
                StrokeShape="RoundRectangle= 40,0,0,40">
            <Image Source="maui_disney.webp.png"></Image>
        </Border>
        <Button Text="Click Me!"
                WidthRequest="300"
                Margin="0,10"
                BackgroundColor="Yellow"
                TextColor="Black"
                Clicked="Button_Clicked"
                ImageSource="icons8_camera_100.png"
                ContentLayout="top,10">
        </Button>
        <ImageButton
            WidthRequest="50"
            Source="icons8_camera_100.png"
            Clicked="ImageButton_Clicked"></ImageButton>
            <Entry WidthRequest="300" HorizontalTextAlignment="Center"></Entry>
    </VerticalStackLayout>
</ContentPage>